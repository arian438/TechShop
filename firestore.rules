
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rely on email for admin/manager checks
    function isAdmin() {
      return request.auth.token.email == 'admin@example.com';
    }

    function isManager() {
      return request.auth.token.email == 'manager@example.com';
    }

    function isAdminOrManager() {
      return isSignedIn() && (isAdmin() || isManager());
    }

    /**
     * Users can read/write their own data. Admins can read/write any user data.
     * Any signed-in user can list users for the admin panel to function.
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdminOrManager();
      allow list: if isSignedIn();

      /**
       * Secure user's shopping cart. Only the owner can access it.
       */
      match /cart/{cartItemId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    /**
     * Public data is readable by anyone.
     * Writes are restricted to signed in users for now.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow write: if isAdminOrManager();

      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow write: if isAdminOrManager();
    }

    match /brands/{brandId} {
      allow get, list: if true;
      allow write: if isAdminOrManager();
    }

    /**
     * Orders can be created by any signed-in user for themselves.
     * Signed-in users can list all orders.
     * Owners can read their own orders.
     * Updates are restricted to admins/managers.
     */
    match /orders/{orderId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdminOrManager());
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdminOrManager();
      allow delete: if false;
    }

    /**
     * Promotions are public to read. Writes restricted to admins for now.
     */
    match /promotions/{promotionId} {
      allow get, list: if true;
      allow write: if isAdminOrManager();
    }
  }
}
